@page
@model Cookware.Pages.Admin.EditProductsModel
@{
    ViewData["Title"] = "EditProducts";
}

@{
    Layout = "_Layout_Admin";
}

<h2>Edit Product</h2>

<div class="card">
    <form method="post" class="card editProduct">
        <input type="hidden" asp-for="Product.ID" />

        <label asp-for="Product.Sku">Sku</label>
        <input asp-for="Product.Sku" />

        <label asp-for="Product.Name">Name</label>
        <input asp-for="Product.Name" />

        <label asp-for="Product.Price">Price</label>
        <input asp-for="Product.Price" />

        <label asp-for="Product.Description">Description</label>
        <input asp-for="Product.Description" />

        <label asp-for="Product.Image">Image</label>
        <input asp-for="Product.Image" />

        <label asp-for="Product.LanguageIsCSharp">LanguageIsCSharp</label>
        <input asp-for="Product.LanguageIsCSharp" />

        <input type="submit" value="Update Product" />
        <a href="./Index">Back to List</a>
    </form>
</div>